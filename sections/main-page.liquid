<section class="page__section row grid__wrapper main__section" data-section-id="{{ section.id }}" data-section-type="page-section">
  <div class="span-12 auto">
    <div class="page__section-content">
      <h1 class="page-title page__section-title">{{ page.title }}</h1>
        <div class="rte">{{ page.content }}</div>
    </div>
    <style>
      @media screen and (min-width:741px) {
        .page__section-content {
          max-width: {{ section.settings.page_width }}%;
          margin: 0 auto;
        }
      }
    </style>
  </div>
</section>

{% schema %}
  {
    "name": "Page options",
    "settings": [
      {
        "type": "range",
        "id": "page_width",
        "label": "Page content width",
        "unit":"%",
        "min":50,
        "max":100,
        "step":10,
        "default":100,
		    "info": "Set the content width for your pages, mobile will show at full page width"
      }
    ]
  }
{% endschema %}
